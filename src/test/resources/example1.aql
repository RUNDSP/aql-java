SELECT * FROM test.newtest 
PRINT '>>> Should return 11 records.'

DELETE FROM test.newtest WHERE PK = 'rec11'

SELECT * FROM test.newtest 

PRINT '>>> Deleted one record, should now return only 10 records.'

